<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    tools:context=".ui.species.DetailPokeSpecieFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/pokeSpecieDetailPB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pokeSpecieDetailNumber"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pokeSpecieDetailEnglishName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/pokeSpecieDetailNumber"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pokeSpecieDetailJapHrKtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pokeSpecieDetailEnglishName" />

        <TextView
            android:id="@+id/pokeSpecieDetailJapRoomajiName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pokeSpecieDetailJapHrKtName" />

        <ImageView
            android:id="@+id/pokeSpecieDetailImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pokeSpecieDetailJapRoomajiName" />

        <Button
            android:id="@+id/pokeSpecieDetailPrevious"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/previous"
            app:layout_constraintEnd_toStartOf="@+id/pokeSpecieDetailForm"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pokeSpecieDetailImage" />

        <Button
            android:id="@+id/pokeSpecieDetailForm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/form"
            app:layout_constraintEnd_toStartOf="@+id/pokeSpecieDetailNext"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/pokeSpecieDetailPrevious"
            app:layout_constraintTop_toBottomOf="@id/pokeSpecieDetailImage" />

        <Button
            android:id="@+id/pokeSpecieDetailNext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/next"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/pokeSpecieDetailForm"
            app:layout_constraintTop_toBottomOf="@id/pokeSpecieDetailImage" />

        <TextView
            android:id="@+id/pokeSpecieDetailTypes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pokeSpecieDetailPrevious" />

        <TextView
            android:id="@+id/pokeSpecieDetailWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pokeSpecieDetailTypes" />

        <TextView
            android:id="@+id/pokeSpecieDetailHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pokeSpecieDetailWeight" />

        <TextView
            android:id="@+id/pokeSpecieDetailGenera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pokeSpecieDetailHeight" />

        <TextView
            android:id="@+id/pokeSpecieDetailAbilities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pokeSpecieDetailGenera" />

        <TextView
            android:id="@+id/pokeSpecieDetailDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pokeSpecieDetailAbilities" />

        <TextView
            android:id="@+id/pokeSpecieDetailStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pokeSpecieDetailDescription" />

        <TextView
            android:id="@+id/pokeSpecieDetailMoves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pokeSpecieDetailStats" />

        <TextView
            android:id="@+id/pokeSpecieDetailEvolutionCHain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pokeSpecieDetailMoves" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/GlobalContainer"
    tools:context=".ui.setUp.ChooseNameLanguagesFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        app:layout_constraintGuide_percent="0.14"
        style="@style/SetUpGuideLineTitle"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:text="@string/setUp_name_tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline"
        style="@style/SetUpTvTitle" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_description"
        android:text="@string/setUp_name_tv_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        style="@style/SetUpTvDescription" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/cb_english"
        android:text="@string/setUp_name_cb_english"
        app:layout_constraintBottom_toTopOf="@id/cb_roomaji"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/SetUpCbOption1"/>

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/cb_roomaji"
        android:text="@string/setUp_name_cb_roomaji"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/SetUpCbOption" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/cb_kana"
        android:text="@string/setUp_name_cb_kana"
        app:layout_constraintTop_toBottomOf="@id/cb_roomaji"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/SetUpCbOption2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_continue"
        android:text="@string/global_btn_continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/SetUpBtnContinue" />

</androidx.constraintlayout.widget.ConstraintLayout>